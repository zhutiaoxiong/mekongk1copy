<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidme="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg_color_big_white">

    <com.mani.car.mekongk1.ClipTitleHead
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        androidme:leftres="@drawable/selector_back_press"
        androidme:text="增加车辆" />
    <com.kulala.staticsview.style.LeftTextCenterTxt
        android:id="@+id/car_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        androidme:lefttxt="车辆品牌"
        androidme:splitLine="true"
        androidme:text="请您输入车辆品牌"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_below="@+id/title"
        />
    <com.kulala.staticsview.style.LeftTextCenterTxt
        android:id="@+id/car_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        androidme:lefttxt="车辆型号"
        androidme:splitLine="true"
        androidme:text="请您输入车辆型号"
        android:layout_below="@+id/car_brand"
        />
    <com.kulala.staticsview.style.LeftTextCenterEdit
        android:id="@+id/license_plate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        androidme:lefttxt="车牌号码"
        androidme:splitLine="true"
        androidme:hint="请您输入车牌号码"
        android:layout_below="@+id/car_model"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        android:background="@color/normal_txt_color_white"
        android:layout_below="@+id/license_plate">
        <TextView
            android:id="@+id/txt_left"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_12"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/normal_txt_color_black"
            android:text="车辆种类"/>
        <ImageView
            android:id="@+id/img_car_selected"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:src="@drawable/car_type_selector"
            android:layout_marginLeft="@dimen/dp_55"/>
        <TextView
            android:id="@+id/txt_car"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/normal_txt_color_black"
            android:text="轿车"/>
        <ImageView
            android:id="@+id/img_suv_selected"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:layout_marginLeft="45dp"
            android:src="@drawable/car_type_selector"/>
        <TextView
            android:id="@+id/txt_suv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/normal_txt_color_black"
            android:text="SUV"/>
    </LinearLayout>
    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
       android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@drawable/button_selector_rect"
        android:gravity="center"
        android:text="提交" />
</RelativeLayout>