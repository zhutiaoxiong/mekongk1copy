<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/btn_01"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_toLeftOf="@+id/btn_02"
        android:layout_marginRight="34dp"
        android:textSize="16dp"
        android:padding="15dp"
        android:gravity="center"
        android:text=""
        android:maxLines="2"
        android:ellipsize="none"
        android:textColor="#000000"
        android:background="@drawable/control_normal"/>
    <TextView
        android:id="@+id/txt_01"
        android:layout_height="wrap_content"
        android:layout_width="76dp"
        android:textSize="14dp"
        android:textColor="@color/normal_txt_color_white"
        android:layout_below="@+id/btn_01"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/txt_02"
        android:layout_marginRight="34dp"
        android:gravity="center_horizontal"
        android:text=""
        />

    <Button
        android:id="@+id/btn_02"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:padding="15dp"
        android:gravity="center"
        android:text=""
        android:maxLines="2"
        android:ellipsize="none"
        android:textColor="#000000"
        android:background="@drawable/control_normal"/>
    <TextView
        android:id="@+id/txt_02"
        android:layout_height="wrap_content"
        android:layout_width="76dp"
        android:textSize="14dp"
        android:gravity="center_horizontal"
        android:textColor="@color/normal_txt_color_white"
        android:layout_below="@+id/btn_02"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text=""
        />
    <Button
        android:id="@+id/btn_03"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_toRightOf="@+id/btn_02"
        android:layout_marginLeft="34dp"
        android:textSize="16dp"
        android:padding="15dp"
        android:gravity="center"
        android:text=""
        android:maxLines="2"
        android:ellipsize="none"
        android:textColor="#000000"
        android:background="@drawable/control_normal"/>
    <TextView
        android:id="@+id/txt_03"
        android:layout_height="wrap_content"
        android:layout_width="76dp"
        android:textSize="14dp"
        android:textColor="@color/normal_txt_color_white"
        android:layout_toRightOf="@+id/txt_02"
        android:layout_marginLeft="34dp"
        android:layout_below="@+id/btn_03"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center_horizontal"
        android:text=""
        />
</RelativeLayout>