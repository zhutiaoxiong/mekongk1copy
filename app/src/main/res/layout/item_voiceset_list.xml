<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/normal_txt_color_white">
        <TextView
            android:id="@+id/txt_left"
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/normal_txt_color_black"
            android:text="13595566987"
            />
        <ImageView
            android:id="@+id/img_default"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:src="@drawable/voice_default"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/img_voice_select"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:src="@drawable/voice_selected"
            android:layout_toLeftOf="@+id/img_default"
            android:padding="12dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/img_voice_horn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:src="@drawable/voice_horn"
            android:padding="12dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_voice_select"
            />
        <ImageView
            android:id="@+id/img_voice_play"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:src="@drawable/voice_play"
            android:padding="12dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_voice_horn"
            />
</RelativeLayout>