<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidme="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg_color_big_white"
    android:orientation="vertical">
    <com.mani.car.mekongk1.ClipTitleHead
        android:id="@+id/titile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        androidme:text="关于我们"
        androidme:leftres="@drawable/selector_back_press"
        />
    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/logo_login"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/version_code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:text="V0.0.0.1"
        android:textColor="@color/normal_title_color"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/dp_19"
        />

    <com.kulala.staticsview.style.LeftText
        android:id="@+id/public_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        androidme:lefttxt="公众号"
        androidme:splitLine="true"
        />
    <com.kulala.staticsview.style.LeftText
        android:id="@+id/company_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        androidme:lefttxt="公司简介"
        androidme:splitLine="true"
        />
    <com.kulala.staticsview.style.LeftText
        android:id="@+id/user_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        androidme:lefttxt="用户协议"
        />
    <com.kulala.staticsview.style.LeftText
        android:id="@+id/user_private"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        androidme:lefttxt="隐私政策"
        />
    <TextView
        android:id="@+id/need_update"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:text="当前已是最新版本"
        android:textColor="@color/normal_txt_color_cyan"
        android:textSize="16sp"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:id="@+id/copyright_declaration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="copyright@2016-2019chedoujia
        All Rights Reserve"
        android:textColor="@color/normal_title_color"
        android:textSize="14dp"
        android:singleLine="false"
        android:lineSpacingExtra="5dp"
        android:lineSpacingMultiplier="1.1"
        />
</LinearLayout>