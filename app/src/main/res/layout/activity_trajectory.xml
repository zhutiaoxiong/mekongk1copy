<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidme="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg_color_big_white">
    <com.mani.car.mekongk1.ClipTitleHead
        android:id="@+id/titile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        androidme:text="行车记录"
        androidme:leftres="@drawable/selector_back_press"
        />
    <com.amap.api.maps.MapView
        android:id="@+id/mapview"
        android:layout_below="@+id/titile"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        />
    <TextView
        android:id="@+id/txt_date"
        android:layout_below="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:paddingLeft="@dimen/dp_12"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/normal_txt_color_black"
        android:background="@color/normal_bg_color_big_white"
        android:text=""/>
    <ImageView
        android:id="@+id/img_date"
        android:layout_width="58dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mapview"
        android:src="@drawable/date"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview_records"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_date"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/txt_no_trajectory"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_below="@+id/txt_date"
        android:textColor="@color/normal_txt_color_white"
        android:background="@drawable/item_trajectory_bg"
        android:text="当天无行车记录"
        android:visibility="invisible"
        />


</RelativeLayout>