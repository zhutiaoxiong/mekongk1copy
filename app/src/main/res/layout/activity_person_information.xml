<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidme="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg_color_big_white">
    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/normal_title_color">
        <com.mani.car.mekongk1.ClipTitleHead
            android:id="@+id/titile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            androidme:text="个人信息"
            androidme:leftres="@drawable/selector_back_press"
            />
        <com.kulala.staticsview.image.CircleImg
            android:id="@+id/user_logo"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/push" />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="么控K1"
            android:textColor="@color/normal_txt_color_white"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/dp_13"
            />
        <TextView
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/normal_txt_color_white"
            android:textSize="16sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/info_layout"
        android:layout_marginTop="@dimen/dp_24">
        <com.kulala.staticsview.style.LeftText
            android:id="@+id/change_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            androidme:lefttxt="更改昵称"
            androidme:splitLine="true"
            androidme:rightres="@drawable/gesture_close"
            />
        <com.kulala.staticsview.style.LeftTextRightImg
            android:id="@+id/change_gueture_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            androidme:lefttxt="手势密码"
            androidme:splitLine="true"
            />
        <com.kulala.staticsview.style.LeftText
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            androidme:lefttxt="登陆密码"
            androidme:splitLine="true"
            />
        <com.kulala.staticsview.style.LeftText
            android:id="@+id/change_phonenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            androidme:lefttxt="更改账号"
            />
    </LinearLayout>

</RelativeLayout>