<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/normal_txt_color_white"
        android:orientation="horizontal">
        <com.kulala.staticsview.image.CircleImg
            android:id="@+id/img_left"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_gravity="center_vertical"
            android:src="@drawable/headpic_nomal"/>
        <TextView
            android:id="@+id/txt_left"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/normal_txt_color_black"
            android:text="13595566987"
            />

        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/person_phone"/>
        <ImageView
            android:id="@+id/img_splite_line"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@color/normal_txt_color_black"/>
        <ImageView
            android:id="@+id/img_wechat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/person_wechat"/>
    </LinearLayout>
</LinearLayout>