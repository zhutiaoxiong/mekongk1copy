<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidme="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgst_white_round8"
    >

    <ImageView
        android:id="@+id/img_car_logo"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_19"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:id="@+id/tv_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="57dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/car_brand"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/normal_txt_color_black"
            android:text="奥迪A6"/>
        <EditText
            android:id="@+id/car_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/normal_txt_color_black"
            android:hint=""
            android:singleLine="true"
            android:maxLength="8"
            android:textColorHint="@color/normal_txt_color_black"
            android:textCursorDrawable="@null"
            android:text="粤A888888"/>
        <ImageView
            android:id="@+id/img_chahao"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginTop="@dimen/dp_3"
            android:padding="@dimen/dp_12"
            android:scaleType="centerCrop"
            android:src="@drawable/chacha"/>
    </LinearLayout>

    <View
        android:id="@+id/view_splitline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/normal_bg_color_big_white"
        android:layout_toRightOf="@+id/img_car_logo"
        android:layout_below="@+id/tv_layout"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        />
    <LinearLayout
        android:id="@+id/tv_layout_two"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/view_splitline"
        >
        <ImageView
            android:id="@+id/img_car_selected"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:src="@drawable/car_type_selector"/>
        <TextView
            android:id="@+id/txt_car"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/normal_txt_color_black"
            android:text="轿车"/>
        <ImageView
            android:id="@+id/img_suv_selected"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/dp_45"
            android:src="@drawable/car_type_selector"/>
        <TextView
            android:id="@+id/txt_suv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/normal_txt_color_black"
            android:text="SUV"/>
    </LinearLayout>
    <View
        android:id="@+id/splite_line_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/normal_bg_color_big_white"
        android:layout_below="@+id/tv_layout_two"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        />
    <com.kulala.staticsview.style.LeftText
        android:id="@+id/service_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        androidme:lefttxt="服务到期日2019年10月10日"
        androidme:splitLine="true"
        android:layout_below="@+id/splite_line_two"
        androidme:gravityTxt="center"
        />
    <LinearLayout
        android:id="@+id/li1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/service_time"
        android:orientation="horizontal">
        <com.kulala.staticsview.style.LeftText
            android:id="@+id/car_moudle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            androidme:lefttxt="绑定模组"
            androidme:splitLine="true"
            androidme:gravityTxt="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/normal_bg_color_big_white"
            />
        <com.kulala.staticsview.style.LeftText
            android:id="@+id/change_voice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            androidme:lefttxt="音效更改"
            androidme:splitLine="true"
            androidme:gravityTxt="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/li2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/li1"
        android:orientation="horizontal">
        <com.kulala.staticsview.style.LeftText
            android:id="@+id/car_appearance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            androidme:lefttxt="车辆外观"
            androidme:splitLine="true"
            androidme:gravityTxt="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/normal_bg_color_big_white"
            />
        <com.kulala.staticsview.style.LeftText
            android:id="@+id/message_tip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            androidme:lefttxt="消息设置"
            androidme:gravityTxt="center"
            androidme:splitLine="true"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/li3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/li2"
        android:orientation="horizontal">

        <!--<View-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/normal_bg_color_big_white"-->
            <!--/>-->
        <com.kulala.staticsview.style.LeftText
            android:id="@+id/recharge_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            androidme:lefttxt="充值服务"
            androidme:gravityTxt="center"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/txt_select_car"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/normal_txt_color_white"
        android:layout_below="@+id/li3"
        android:background="@drawable/white_nomal"
        android:text="选择此车辆"/>
</RelativeLayout>