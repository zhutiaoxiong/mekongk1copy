<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidme="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg_color_big_white">

    <com.mani.car.mekongk1.ClipTitleHead
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        androidme:leftres="@drawable/selector_back_press"
        androidme:text="车辆外观" />

    <ImageView
        android:id="@+id/img_carbody"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_above="@+id/txt_mark"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@android:color/transparent"
        android:scaleType="fitCenter"
        />
    <ImageView
        android:id="@+id/img_sticker"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_above="@+id/txt_mark"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@android:color/transparent"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/txt_mark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="车样式"
        android:textColor="@color/normal_txt_color_black"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:layout_above="@+id/pager_image"
        android:layout_marginBottom="22dp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/pager_image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="9dp"
        android:layout_above="@+id/lin_b"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        />
    <LinearLayout
        android:id="@+id/lin_b"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_carcolor"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:text="车身颜色"
            android:textColor="@color/txtclBlack"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            />
        <TextView
            android:id="@+id/txt_sticker"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:text="个性车贴"
            android:textColor="@color/txtclGray"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            />
    </LinearLayout>
</RelativeLayout>