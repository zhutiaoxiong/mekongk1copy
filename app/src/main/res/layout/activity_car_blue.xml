<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidme="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg_color_big_white">

    <com.mani.car.mekongk1.ClipTitleHead
        android:id="@+id/title_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        androidme:leftres="@drawable/selector_back_press"
        androidme:text="绑定蓝牙" />
    <ImageView
        android:id="@+id/img_blue"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="39dp"
        android:src="@drawable/img_un_bind"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title_head"/>
        <TextView
            android:id="@+id/txt_blue"
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/normal_txt_color_white"
            android:layout_marginTop="39dp"
            android:layout_below="@+id/img_blue"
            android:background="@color/normal_title_color"
            android:hint="请选择蓝牙号"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />
        <ImageView
            android:id="@+id/img_drop_down"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="@dimen/dp_2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="39dp"
            android:layout_below="@+id/img_blue"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/btn_selector_dropdown"/>
    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:background="@drawable/button_selector_rect"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@+id/txt_blue"
        android:enabled="false"
        android:text="绑定"/>
    <TextView
        android:id="@+id/txt_tip"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:textColor="@color/normal_txt_color_black"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/btn_confirm"
        android:text="绑定须知"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        />
    <TextView
        android:id="@+id/txt_tip_content"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:textColor="@color/normal_title_color"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/txt_tip"
        android:text="蓝牙"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:lineSpacingExtra="5dp"
        android:lineSpacingMultiplier="1.1"
        />
    <TextView
        android:id="@+id/txt_koow_product"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/normal_txt_color_black"
        android:layout_marginBottom="47dp"
        android:text="了解产品"
        android:layout_alignParentBottom="true"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview_blues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_blue"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:visibility="invisible"
        android:layout_marginTop="1dp"
        />
</RelativeLayout>