        <attr name="maxLength" format="integer" />
        <attr name="text" format="string" />
        <attr name="texttop" format="string" />
        <attr name="textbottom" format="string" />
        <attr name="textcolor" format="color" />
        <attr name="lefttxt" format="string" />
        <attr name="righttxt" format="string" />
        <attr name="righthint" format="string" />
        <attr name="res" format="reference" />
        <attr name="leftres" format="reference" />
        <attr name="rightres" format="reference" />
        <attr name="background" format="reference" />
        <attr name="bkcolor" format="color" />
        <attr name="righttxtcolor" format="color" />
        <attr name="splitLine" format="boolean" />
        <attr name="hideRightImage" format="boolean" />
        <attr name="hideCenterImage" format="boolean" />
        <attr name="hideCenterTxt" format="boolean" />
        <attr name="needPadding" format="boolean" />
        <attr name="selected" format="boolean" />
        <attr name="hideRightTxt" format="boolean" />
        <attr name="pos" format="integer" />
    </declare-styleable>
    <declare-styleable name="CircularImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
