<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_left"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_12"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/normal_txt_color_black"
        android:background="@color/normal_txt_color_white"
        android:text="提示信息"/>
    <EditText
        android:id="@+id/txt_center"
        android:layout_height="@dimen/dp_45"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/txt_left"
        android:paddingLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/normal_title_color"
        android:textColorHint="@color/normal_title_color"
        android:inputType="none"
        android:hint="叶先生"
        android:background="@color/normal_txt_color_white"
        />
    <View
        android:id="@+id/view_splitline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/normal_txt_color_gray"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_below="@+id/txt_left"/>
</RelativeLayout>